<script type="text/javascript">
	$(function() {	
		//1. 마우스가 작은 이미지 영역 안으로 들어가면 hover 이벤트 발생하도록
		$('.small').hover(function() {
			//mouseenter event...
			$(this).parent().addClass('hover');
			//현재 부모인 td에 있는 상태
			var imagename = $(this).attr('hred');
			
			
		}, function() {
			//mouseleave event...
			$(this).parent().removeClass('hover');
			
			
			
			
		});
	}); 
</script>
