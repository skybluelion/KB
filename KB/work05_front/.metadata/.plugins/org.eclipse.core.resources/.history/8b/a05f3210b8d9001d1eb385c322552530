<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
$(function() {	
	refreshPage();
	
});
function refreshPage(){
	var html="";
	//localStorage에 담겨진 내용을 여기서 받아와서 출력
	for(var key in localStorage){
		if(key=='length') break;
		//data[0]이름, data[1]이미지, data[2]가격
		var data = localStorage.getItem(key).split(",");
		html +='<tr><td><img src='+data[1]+'></td><td>'+key+
				'</td><td>'+data[0]+'</td><td>'+data[2]+
				'</td><td><button value='+key+'>삭제</button></td></tr>';
	}
	
	$('#content').html(html);
}

</script>
</head>
