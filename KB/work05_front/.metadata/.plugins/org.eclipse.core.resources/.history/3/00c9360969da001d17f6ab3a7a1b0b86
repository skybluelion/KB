  	function login() {
  		let email =   document.querySelector("#email") ;
		let pwd =   document.querySelector("#password");
		
		if(email.value==""){
			alert("이메일를 입력해주세요.");
			email.focus();
			return false;
		}
		
		if(pwd.value==""){
			alert("비밀번호를 입력해주세요.");
			pwd.focus();
			return false;
		}
		
		alert("모든정보가 있습니다.")
	     e.preventDefault();
		
	}
  </script>
